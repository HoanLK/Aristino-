@model CMS.Models.ThongKe

@{
    ViewBag.Title = "Thông tin Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-app="myApp">
    <div ng-controller="themThongKeController">
        <input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="cancel()"><span class="fa fa-arrow-circle-left"></span> Quay lại</button>
            </div>
        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="card-head">
                        <ul class="nav nav-tabs" data-toggle="tabs">
                            <li class="active"><a href="#noidung">Khách hàng</a></li>
                        </ul>
                    </div>
                    <div class="card-body tab-content">
                        <div class="tab-pane active" id="noidung">
                            <div class="col-md-9">
                                <form class="form" role="form">
                                    <div class="form-group  ">
                                        <label for="hoTen">Họ tên</label>
                                        <input type="text" class="form-control" id="hoTen" name="hoTen" ng-model="ThongKe.ten" readonly>

                                    </div>
                                    <div class="form-group  ">
                                        <label for="diaChi">Địa Chỉ</label>
                                        <input type="text" class="form-control" id="diaChi" name="diaChi" ng-model="ThongKe.diaChi" readonly>

                                    </div>
                                    <div class="form-group  " ng-class="{'has-error':!ThongKe.SDT, 'has-success':ThongKe.SDT}">
                                        <label for="SDT">Số điện thoại *</label>
                                        <input type="text" class="form-control" id="SDT" name="SDT" ng-model="ThongKe.SDT" readonly>

                                    </div>
                                    <div class="form-group  ">
                                        <label for="email">Email</label>
                                        <input type="text" class="form-control" id="email" name="email" ng-model="ThongKe.email" readonly>

                                    </div>
                                    <div class="form-group  " ng-class="{'has-error':!ThongKe.soLanMuaHang, 'has-success':ThongKe.soLanMuaHang}" readonly>
                                        <label for="soLanMuaHang">Số lần mua hàng *</label>
                                        <input type="text" class="form-control" id="soLanMuaHang" name="soLanMuaHang" ng-model="ThongKe.soLanMuaHang" readonly>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>