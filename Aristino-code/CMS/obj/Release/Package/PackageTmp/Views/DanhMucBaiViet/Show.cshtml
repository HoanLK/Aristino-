@model CMS.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="trangbosuutap col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryPostController">
    <input type="hidden" value="@Model.idCategory" id="idCategory" />
    <!--Banner-->
    @Html.Partial("_Banner")

    <article class="cacbosuutap col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p ng-hide="posts.length > 0" style="font-size: 3em;color: #f44336; text-align:center">Chưa có bài viết nào</p>
        <div class="bosuutap col-xs-12 col-sm-12 col-md-12 col-lg-12" dir-paginate="(index, value) in posts | itemsPerPage: 8" ng-show="posts.length > 0">
            <img ng-src="{{value.image}}" alt="{{value.title}}" ng-class="{'pull-left':(index % 2 == 0),'pull-right':(index % 2 ==1)}" />
            <div class="thongtin " ng-class="{'pull-right':(index % 2 == 0),'pull-left':(index % 2 ==1)}">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <span>{{value.title}}</span><br />
                    ****** <br />
                    {{value.description | limitTo: 100}}{{value.description.length > 100 ? '&hellip;' : ''}}
                    <br />
                </p>
                <div class="xemthem col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">Xem thêm</a>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ccontainer" style="text-align:center"><dir-pagination-controls></dir-pagination-controls></div>
