@model CMS.Models.CategoryProduct
@{
    ViewBag.Title = ViewBag.title;
}

<section class="trangloaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryProductController">
    <input type="hidden" value="@Model.idCategory" id="idCategoryProduct" />
    <!--Banner-->
    @Html.Partial("_Banner")

    <!--Danh sách sản phẩm-->
    <article class="col-xs-12 col-sm-12 col-md-9 col-lg-9 pull-right">

        <!--Tiêu đề-->
        <div class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p>@Model.title</p>
        </div>

        <!--Các sản phẩm-->
        <div class="cacsanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p ng-hide="products.length > 0" style="font-size: 3em;color: #f44336; text-align:center">Đang cập nhật</p>
            <!--Sản phẩm-->
            <div class="sanpham col-xs-12 col-sm-6 col-md-3 col-lg-3" dir-paginate="(index, value) in products | itemsPerPage: 12" ng-show="products.length > 0">
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"/>
                <p>
                    {{value.title}} <br />
                    <span>{{value.price | number:0}} đ</span>
                </p>

                <!--Nút xem chi tiết-->
                <div>
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}">Chi tiết</a>
                </div>
            </div>
        </div>

        <!--Số trang-->
        <nav aria-label="Page navigation" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <dir-pagination-controls></dir-pagination-controls>
        </nav>
    </article>

    <!--Danh mục đề tài-->
    @Html.Partial("_DanhMucSanPham")
</section>