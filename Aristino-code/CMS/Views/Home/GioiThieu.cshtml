    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="tranggioithieu col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <!--Banner-->
    <div class="banner hidden-xs col-sm-12 col-md-12 col-lg-12">
        <img src="~/Content/Front/images/gioithieu/banner.png" alt="" />
        <p>
            <span>
                Welcome you to <br />
                Aristino Hải Phòng
            </span><br />
            Chào mừng quý khách đã đến với Thời trang nam - Aristino Hải Phòng <br />
            Kính chúc quý khách tìm được sản phẩm ưng ý với mình !
        </p>
    </div>

