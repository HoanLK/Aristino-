
@{
    ViewBag.Title = "BoSuuTapTopics";
}

<section class="trangbosuutaptopics col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <!--Banner-->
    @Html.Partial("_Banner")

    <!--Tieu de-->
    <p class="tieude">
        <span>Aristino Fit To Measure</span><br />
        Hãy trở thành những quý ông sang trọng, đẳng cấp khi khoác lên mình những bộ suits tinh tế trong BST thời trang nam Aristino Fit To Measure.
    </p>

    <!--Slide anh-->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/images/gioithieu/gt-3.png" alt="">
            </div>
            <div class="item">
                <img src="~/Content/images/gioithieu/gt-1.png" alt="">
            </div>
            <div class="item">
                <img src="~/Content/images/gioithieu/gt-2.png" alt="">
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--Cac bo cung bst-->
    <div class="cacbotuongtu col-xs-12 col-sm-12 col-md-12 col-lg-12">

        @for (int i = 0; i < 3; i++)
        {
            if (i % 2 == 0)
            {
        <div class="botuongtu col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <a href="@Url.Action("BoSuuTapTopics","Home")">
                <p class="tieude">
                    <span>Aristino From Work</span><br />
                    BST thời trang công sở Aristino From Work mang tới những thiết kế sơ mi và quần Âu đầy lịch lãm, nổi bật và lôi cuốn trên những chất liệu thượng hạng.
                </p>
                <img src="~/Content/images/gioithieu/gt-5.png" alt="" />
            </a>
        </div>
            }
            else
            {
        <div class="botuongtu col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <a href="@Url.Action("BoSuuTapTopics","Home")">
                <p class="tieude">
                    <span>Aristino Sport Wear</span><br />
                    BST thời trang nam Aristino Sport Wear với những trang phục thời trang mang phong cách thể thao tạo cảm giác khoẻ khoắn, đầy năng lượng cho người mặc.
                </p>
                <img src="~/Content/images/gioithieu/gt-7.png" alt="" />
            </a>
        </div>
            }
        }
    </div>
</section>