
@{
    ViewBag.Title = "LoaiSanPham";
}

<section class="trangloaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <!--Banner-->
    @Html.Partial("_Banner")

    <!--Danh sách sản phẩm-->
    <article class="col-xs-12 col-sm-12 col-md-9 col-lg-9 pull-right">

        <!--Tiêu đề-->
        <div class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p>Áo sơ mi</p>
        </div>

        <!--Các sản phẩm-->
        <div class="cacsanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <!--Sản phẩm-->
            @for (int i = 0; i < 12; i++)
            {
            <div class="sanpham col-xs-12 col-sm-6 col-md-3 col-lg-3">
                <img src="~/Content/images/sanphammoi.png" alt="" />
                <p>
                    Áo sơ mi nam ARISTINO ALS17-MO53 <br />
                    <span>750.000 đ</span>
                </p>

                <!--Nút xem chi tiết-->
                <div>
                    <a href="@Url.Action("ChiTietSanPham","Home")">Chi tiết</a>
                </div>
            </div>
            }
        </div>

        <!--Số trang-->
        <nav aria-label="Page navigation" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </article>

    <!--Danh mục đề tài-->
    @Html.Partial("_DanhMucSanPham")
</section>